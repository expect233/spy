# OpenAI API Key for topic generation (optional)
OPENAI_API_KEY=

# Redis configuration (optional, defaults to in-memory storage)
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-here

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Game configuration
DEFAULT_LOBBY_TIMER=120
DEFAULT_SPEAK_TIMER=30
DEFAULT_VOTE_TIMER=45

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
