rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 頭像上傳規則
    match /avatars/{playerId}/{fileName} {
      // 允許讀取所有頭像
      allow read: if true;
      
      // 只允許上傳自己的頭像
      allow write: if request.auth != null &&
                      request.auth.uid == playerId &&
                      isValidAvatarFile();
      
      // 允許刪除自己的頭像
      allow delete: if request.auth != null &&
                       request.auth.uid == playerId;
    }
    
    // 驗證頭像檔案的函數
    function isValidAvatarFile() {
      return request.resource.size <= 512 * 1024 && // 512KB 限制
             request.resource.contentType.matches('image/.*') && // 只允許圖片
             request.resource.contentType in ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];
    }
  }
}
